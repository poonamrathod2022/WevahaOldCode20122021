<script type="text/javascript">
    $(document).ready(function () {
        $("#btnSubmit").click(function () {
            var email


            $('#FGForm').validate({ // initialize the plugin
                rules: {
                    email: {
                        required: true,
                        email: true
                    }
                },
                messages: {
                    email: {
                        required: "Enter Email",
                        email: "Please Enter Valid Email"
                    }
                },
                submitHandler: function (form) { // for demo
                    email = $("#email").val();
                    $.ajax({
                        type: 'POST',
                        url: "/Home/ForgotPassword",
                        data: { EmailID: email },
                        success: function (data) {
                            if (data == "Success") {
                                swal({
                                    icon: "warning",
                                    text: "Reset password link has been sent to your email id.",
                                    type: "success",
                                    buttons: false
                                });
                                window.setTimeout(function () { window.location = "../Home/Index"; }, 3000);
                            }
                            else if (data == "Request") {
                                swal({
                                    icon: "warning",
                                    text: "Reset password link has been sent to your email id, Please Reset Password",
                                    type: "success",
                                    buttons: false
                                });
                                window.setTimeout(function () { window.location = "../Home/Index"; }, 3000);
                            }
                            else {
                                swal({
                                    icon: "warning",
                                    text: "User doesn't exists.",
                                    type: "success",
                                    timer: 1000,
                                    buttons: false
                                });
                                $("#email").val('');
                            }
                        },
                        error: function () {
                            alert("error");
                        }
                    });
                }
            });

        });
    });
</script>

