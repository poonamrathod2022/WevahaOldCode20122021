            <td width="35%" style="padding-top:10px;"><strong>Pay Mode</strong></td>
            <td width="5%" style="padding-top:10px;"><strong>:</strong></td>
            <td width="60%" style="padding-top:10px;">@Model.PayMode</td>
             </tr>

                <tr>
                    <td width="35%" style="padding-top:10px;"><strong>Account Status</strong></td>
                    <td width="5%" style="padding-top:10px;"><strong>:</strong></td>
                    <td width="60%" style="padding-top:10px;">Active</td>
                </tr>



            </table>


        </div>
    </div>

</div>

